<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearLayout"
        android:layout_above="@+id/menuLayout" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_plus" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:id="@+id/linearLayout">

        <EditText
            android:id="@+id/searchAddress"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:paddingLeft="5dp"
            android:hint="주소 검색 (ex, 역삼동)"
            android:textSize="16dp"
            android:textScaleX="0.9"
            android:textColor="@color/A8A8A8"
            android:textColorHint="@color/A8A8A8"
            android:backgroundTint="@color/A8A8A8"
            android:inputType="textPersonName"
            android:gravity="bottom"
            android:layout_weight="17"/>

        <ImageView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:src="@drawable/btn_mylocation"
            android:onClick="onClickMyLocation"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:text="내위치"
            android:textSize="13dp"
            android:gravity="center_vertical"
            android:textColor="@color/A8A8A8"
            android:onClick="onClickMyLocation"
            android:layout_weight="2"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/btn_addFav"
        android:onClick="addFav"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_map_fav"
        android:layout_above="@+id/menuLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="75dp"/>

    <ImageView
        android:onClick="onClickMinwon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_map_minwon"
        android:layout_above="@+id/menuLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp" />

    <!-- Bottom Menu Bar -->
    <LinearLayout
        android:id="@+id/menuLayout"
        android:background="@drawable/bg_menubar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/write"
                android:src="@drawable/btn_write"
                android:onClick="onClickMenu"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:padding="2.5dp"
                android:layout_weight="7"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:text="민원신청"
                android:textSize="10dp"
                android:textColor="@color/A8A8A8"
                android:textScaleX="0.9"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/daummap"
                android:src="@drawable/btn_map_on"
                android:onClick="onClickMenu"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:padding="2.5dp"
                android:layout_weight="7"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:text="지도"
                android:textSize="10dp"
                android:textColor="@color/A8A8A8"
                android:textScaleX="0.9"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/home"
                android:src="@drawable/btn_home"
                android:onClick="onClickMenu"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:padding="2.5dp"
                android:layout_weight="7"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:text="홈"
                android:textSize="10dp"
                android:textColor="@color/A8A8A8"
                android:textScaleX="0.9"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fav"
                android:src="@drawable/btn_fav"
                android:onClick="onClickMenu"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:padding="2.5dp"
                android:layout_weight="7"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:text="즐겨찾기"
                android:textSize="10dp"
                android:textColor="@color/A8A8A8"
                android:textScaleX="0.9"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/mypage"
                android:src="@drawable/btn_user"
                android:onClick="onClickMenu"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:padding="2.5dp"
                android:layout_weight="7"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:text="마이페이지"
                android:textSize="10dp"
                android:textColor="@color/A8A8A8"
                android:textScaleX="0.9"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>