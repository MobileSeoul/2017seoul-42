<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_mypage"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.dayeon.app.sswitch.FavActivity">

    <RelativeLayout
        android:id="@+id/layoutFavTop"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="4"
        android:background="@drawable/bg_fav_top">

        <ImageView
            android:id="@+id/mainLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:background="@drawable/img_logo" />

        <TextView
            android:id="@+id/favTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="즐겨찾기"
            android:textColor="@color/yellow"
            android:textSize="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="5dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="vertical"
        android:layout_weight="6"
        android:weightSum="1"
        android:layout_below="@+id/favTitle"
        android:layout_above="@+id/menuLayout">
         <LinearLayout
            android:id="@+id/boxLayout1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">
             <LinearLayout
                 android:id="@+id/yellowBox1"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:weightSum="1"
                 android:orientation="vertical"
                 android:background="@drawable/bg_box_plus">
                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="0dip"
                     android:layout_weight="0.25"
                     android:paddingRight="17dp">
                     <ImageView
                         android:visibility="invisible"
                         android:id="@+id/delFav1"
                         android:onClick="delFav"
                         android:layout_width="25dp"
                         android:layout_height="25dp"
                         android:scaleType="fitXY"
                         android:paddingTop="8dp"
                         android:paddingBottom="8dp"
                         android:paddingLeft="10dp"
                         android:paddingRight="6dp"
                         android:src="@drawable/btn_fav_del"
                         android:layout_alignParentBottom="true"
                         android:layout_alignParentRight="true"
                         android:layout_alignParentEnd="true" />
                 </RelativeLayout>
                 <TextView
                     android:id="@+id/fav_box1"
                     android:layout_width="match_parent"
                     android:paddingLeft="30dp"
                     android:paddingRight="30dp"
                     android:layout_height="0dip"
                     android:layout_weight="0.35"
                     android:text=""
                     android:textSize="25dp"
                     android:singleLine="true"
                     android:ellipsize="end"
                     android:textColor="@color/navy"
                     android:gravity="center"
                     android:onClick="onClickBox" />
                 <TextView
                     android:id="@+id/fav_box1_1"
                     android:layout_width="match_parent"
                     android:paddingLeft="30dp"
                     android:paddingRight="30dp"
                     android:layout_height="0dip"
                     android:layout_weight="0.2"
                     android:text=""
                     android:textSize="10dp"
                     android:textScaleX="0.9"
                     android:singleLine="true"
                     android:ellipsize="end"
                     android:textColor="@color/navy"
                     android:gravity="center_horizontal" />
             </LinearLayout>

             <LinearLayout
                 android:id="@+id/yellowBox2"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:weightSum="1"
                 android:orientation="vertical"
                 android:background="@drawable/bg_box_plus">
                 <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="0dip"
                     android:layout_weight="0.25"
                     android:paddingRight="20dp">
                     <ImageView
                         android:visibility="invisible"
                         android:id="@+id/delFav2"
                         android:onClick="delFav"
                         android:layout_width="25dp"
                         android:layout_height="25dp"
                         android:paddingTop="8dp"
                         android:paddingBottom="8dp"
                         android:paddingLeft="10dp"
                         android:paddingRight="6dp"
                         android:src="@drawable/btn_fav_del"
                         android:layout_alignParentBottom="true"
                         android:layout_alignParentRight="true"
                         android:layout_alignParentEnd="true" />
                 </RelativeLayout>
                 <TextView
                     android:id="@+id/fav_box2"
                     android:layout_width="match_parent"
                     android:layout_height="0dip"
                     android:layout_weight="0.35"
                     android:text=""
                     android:textSize="25dp"
                     android:textColor="@color/navy"
                     android:gravity="center"
                     android:onClick="onClickBox" />
                 <TextView
                     android:id="@+id/fav_box2_1"
                     android:layout_width="match_parent"
                     android:paddingLeft="30dp"
                     android:paddingRight="30dp"
                     android:layout_height="0dip"
                     android:layout_weight="0.2"
                     android:text=""
                     android:textSize="10dp"
                     android:textScaleX="0.9"
                     android:singleLine="true"
                     android:ellipsize="end"
                     android:textColor="@color/navy"
                     android:gravity="center_horizontal" />
             </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/boxLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/boxLayout1"
            android:layout_weight="0.5">

            <LinearLayout
                android:id="@+id/yellowBox3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1"
                android:orientation="vertical"
                android:background="@drawable/bg_box_plus">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.25"
                    android:paddingRight="20dp">
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/delFav3"
                        android:onClick="delFav"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="6dp"
                        android:src="@drawable/btn_fav_del"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/fav_box3"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.35"
                    android:text=""
                    android:textSize="25dp"
                    android:textColor="@color/navy"
                    android:gravity="center"
                    android:onClick="onClickBox" />
                <TextView
                    android:id="@+id/fav_box3_1"
                    android:layout_width="match_parent"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_height="0dip"
                    android:layout_weight="0.2"
                    android:text=""
                    android:textSize="10dp"
                    android:textScaleX="0.9"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/navy"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/yellowBox4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:weightSum="1"
                android:orientation="vertical"
                android:background="@drawable/bg_box_plus">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.25"
                    android:paddingRight="20dp">
                    <ImageView
                        android:visibility="invisible"
                        android:id="@+id/delFav4"
                        android:onClick="delFav"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="6dp"
                        android:src="@drawable/btn_fav_del"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/fav_box4"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="0.35"
                    android:text=""
                    android:textSize="25dp"
                    android:textColor="@color/navy"
                    android:gravity="center"
                    android:onClick="onClickBox" />
                <TextView
                    android:id="@+id/fav_box4_1"
                    android:layout_width="match_parent"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:layout_height="0dip"
                    android:layout_weight="0.2"
                    android:text=""
                    android:textSize="10dp"
                    android:textScaleX="0.9"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/navy"
                    android:gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <!-- Bottom Menu Bar -->
    <LinearLayout
        android:id="@+id/menuLayout"
        android:background="@drawable/bg_menubar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/write"
                android:src="@drawable/btn_write"
                android:onClick="onClickMenu"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:padding="2.5dp"
                android:layout_weight="7"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:text="민원신청"
                android:textSize="10dp"
                android:textColor="@color/A8A8A8"
                android:textScaleX="0.9"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/daummap"
                android:src="@drawable/btn_map"
                android:onClick="onClickMenu"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:padding="2.5dp"
                android:layout_weight="7"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:text="지도"
                android:textSize="10dp"
                android:textColor="@color/A8A8A8"
                android:textScaleX="0.9"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/home"
                android:src="@drawable/btn_home"
                android:onClick="onClickMenu"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:padding="2.5dp"
                android:layout_weight="7"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:text="홈"
                android:textSize="10dp"
                android:textColor="@color/A8A8A8"
                android:textScaleX="0.9"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fav"
                android:src="@drawable/btn_fav_on"
                android:onClick="onClickMenu"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:padding="2.5dp"
                android:layout_weight="7"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:text="즐겨찾기"
                android:textSize="10dp"
                android:textColor="@color/A8A8A8"
                android:textScaleX="0.9"
                android:gravity="center_horizontal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:weightSum="10"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/mypage"
                android:src="@drawable/btn_user"
                android:onClick="onClickMenu"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:padding="2.5dp"
                android:layout_weight="7"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:text="마이페이지"
                android:textSize="10dp"
                android:textColor="@color/A8A8A8"
                android:textScaleX="0.9"
                android:gravity="center_horizontal"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
